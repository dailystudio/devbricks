<?xml version="1.0" encoding="utf-8"?>

<resources>
    
    <attr name="devTextStyle">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>
    
    <attr name="devTextSize" format="dimension" />

    <attr name="devTextColor" format="reference|color" />
    
    <!-- Standard orientation constant. -->
    <attr name="devOrientation">
        <!-- Defines an horizontal widget. -->
        <enum name="horizontal" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="vertical" value="1" />
    </attr>

    <declare-styleable name="CountView">
        <attr name="minDigits" format="integer" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="DurationCountView">
        <attr name="devTextStyle" />
        <attr name="devTextSize" />
        <attr name="devTextColor" />
	</declare-styleable>

    <declare-styleable name="GifMovieView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
        <attr name="infinite" format="boolean" />
        <attr name="fill" format="boolean" />
    </declare-styleable>

</resources>